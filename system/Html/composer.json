{
    "name": "higgs/html",
    "description": "Biblioteca PHP moderna para generación de HTML puro, agnóstico y semántico.",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "html",
        "bootstrap",
        "bootstrap5",
        "components",
        "forms",
        "ui",
        "web"
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "Higgs\\Html\\": ""
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Higgs\\Html\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check": "phpstan analyse",
        "cs": "phpcs",
        "cs-fix": "phpcbf"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "stable"
}
